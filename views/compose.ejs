<%- include("partials/header") -%>
<style>
input[type=text], select {
  width: 80%;
  height: 10%;
  margin: -2px 0px 1px 0px;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}
textarea {
  width: 80%;
  height: 10%;
  margin: -2px 0px 1px 0px;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}
button {
  background: #43658b;
  color: white;
  border-radius: 4px;
  border: 1px solid #ccc;
  padding: 6.5px 14px 6.5px 14px;
}
</style>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <label for="journalTitle"><strong>Title</strong></label>
  <br>
  <input type="text" name="journalTitle">
  <br>
  <label for="journalContent"><strong>Post</strong></label>
  <br>
  <textarea rows = "5" cols = "150" type="text" name = "journalContent"></textarea>
  <br>
  <button type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>
